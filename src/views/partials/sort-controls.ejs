<%#
    ソートコントロールコンポーネント
    引数:
    - currentSort: 現在のソートキー
    - currentOrder: 現在のソート順序 (asc/desc)
-%>
<div class="card mb-3">
    <div class="card-body py-2">
        <div class="d-flex flex-wrap align-items-center gap-2">
            <span class="text-muted small">並び替え:</span>
            <a href="/?sort=due_date&order=<%= currentSort === 'due_date' && currentOrder === 'asc' ? 'desc' : 'asc' %>"
                class="btn btn-sm <%= currentSort === 'due_date' ? 'btn-primary' : 'btn-outline-secondary' %>">
                期限 <% if (currentSort === 'due_date') { %><i
                        class="bi bi-arrow-<%= currentOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } %>
            </a>
            <a href="/?sort=priority&order=<%= currentSort === 'priority' && currentOrder === 'asc' ? 'desc' : 'asc' %>"
                class="btn btn-sm <%= currentSort === 'priority' ? 'btn-primary' : 'btn-outline-secondary' %>">
                優先度 <% if (currentSort === 'priority') { %><i
                        class="bi bi-arrow-<%= currentOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } %>
            </a>
            <a href="/?sort=created_at&order=<%= currentSort === 'created_at' && currentOrder === 'asc' ? 'desc' : 'asc' %>"
                class="btn btn-sm <%= currentSort === 'created_at' ? 'btn-primary' : 'btn-outline-secondary' %>">
                作成日 <% if (currentSort === 'created_at') { %><i
                        class="bi bi-arrow-<%= currentOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } %>
            </a>
        </div>
    </div>
</div>
